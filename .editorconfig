root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4
max_line_length = 80

[*.nix]
indent_size = 2
max_line_length = 100

[*.md]
max_line_length = 0

[*.{bash,sh,zsh}]
indent_size = 2
switch_case_indent = true
